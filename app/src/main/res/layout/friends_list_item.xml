<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <ImageView
        android:id="@+id/friendImage"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:src="@drawable/userimg"
        android:scaleType="centerCrop"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="10dp" />

    <TextView
        android:id="@+id/friendName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/friendImage"
        android:layout_alignTop="@id/friendImage"
        android:text="Name"
        android:textAppearance="?attr/textAppearanceListItem" />

    <TextView
        android:id="@+id/friendLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/friendImage"
        android:textColor="@color/green"
        android:layout_below="@id/friendName"
        android:text="Location" />

    <TextView
        android:id="@+id/friendBio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/friendImage"
        android:layout_below="@id/friendLocation"
        android:text="friend Bio here"
        android:textAppearance="?attr/textAppearanceListItemSmall" />


    <Button
        android:id="@+id/deleteFriendButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@id/friendName"
        android:text="Delete" />

</RelativeLayout>
