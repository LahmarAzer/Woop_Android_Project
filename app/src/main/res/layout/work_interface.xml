        </FrameLayout>

        <CheckBox
            android:id="@+id/checkBox5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_gravity="top|end"
            android:layout_margin="8dp" />

        <!-- End Block -->
    </GridLayout>
    <GridLayout
        android:id="@+id/gridLayout7"
        android:layout_width="182dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sub_header"
        android:layout_marginTop="369dp"
        android:layout_marginStart="20dp"
        android:columnCount="2"
        android:orientation="horizontal"
        android:padding="16dp"
        android:rowCount="4">

        <!-- Repeat this block for each destination -->
        <FrameLayout
            android:layout_width="143dp"
            android:layout_height="136dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:background="@drawable/explore_button_background"> <!-- Use your provided drawable -->

